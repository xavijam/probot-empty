{
  "name": "probot-empty",
  "version": "1.0.0",
  "description": "A Probot app that commits an empty commit if any user comments something specific",
  "author": "Javier √Ålvarez Medina <xavijam@gmail.com> (https://xavijam.github.io/probot-empty)",
  "license": "ISC",
  "repository": "https://github.com/xavijam/probot-empty.git",
  "homepage": "https://github.com/xavijam/probot-empty",
  "bugs": "https://github.com/xavijam/probot-empty/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "dev": "nodemon",
    "start": "probot run ./index.js",
    "lint": "standard --fix",
    "test": "jest && standard",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage"
  },
  "dependencies": {
    "lodash": "^4.17.10",
    "make-empty-github-commit": "xavijam/make-empty-github-commit#master",
    "probot": "^7.0.0",
    "probot-config": "^0.2.0"
  },
  "devDependencies": {
    "jest": "^22.4.3",
    "nodemon": "^1.17.2",
    "smee-client": "^1.0.2",
    "standard": "^10.0.3"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      ".env",
      "."
    ]
  }
}